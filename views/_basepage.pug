doctype html
html

  head

    block meta
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width, initial-scale=1")

    title= htmlTitle

    block link
      link(rel="stylesheet" href="/css/themes/haruki-light/theme.css")
      link(rel="stylesheet" href="/css/navbar.css")

    block style

    block headscript

  body

    block body

      block navbar
        nav.navbar.navbar-expand-lg.bg-light.navbar-light.navbar-fixed-top.d-print-none
          .container

            a.navbar-brand(href="/") harubootstrap

            button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
            aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation")
              span.navbar-toggler-icon

            .collapse.navbar-collapse#main-nav
              ul.navbar-nav.ms-auto.mb-2.mb-lg-0
                li.nav-item.dropdown
                  a.nav-link.dropdown-toggle(href="#" id="theme-dropdown" role="button" data-bs-toggle="dropdown" 
                  aria-expanded="false") Themes
                  ul.dropdown-menu.dropdown-menu-end#theme-list(aria-labelledby="theme-dropdown")
                    each displayName, urlName in themeList
                      li
                        a.dropdown-item(href=`/theme/${urlName}`)= displayName

      .container.my-4
        block content

    block bodyscript
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
